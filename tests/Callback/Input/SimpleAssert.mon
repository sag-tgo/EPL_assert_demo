using com.apamax.test.callback.Assert; // Probably just com.apamax.test.Assert
using com.apamax.test.AssertHelper;

monitor TestAssert {

	Assert asserter;  // Event instance accessible by everything in this monitor.

	action onload() {
		asserter := Assert.create(true, AssertHelper.throwWithError);
		asserter.isTrue(false, "the sky is blue");
		asserter.isFalse(true, "pigs can fly");
		asserter.equals(2 + 2, 5, "Two plus two = four");
	}
}
